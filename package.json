    "@semantic-release/github": "^10.0.7",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.2.0",
    "@typescript-eslint/parser": "^7.6.0",
    "esbuild": "0.21.5",
    "esbuild-plugin-d.ts": "^1.2.3",
    "eslint": "^9.0.0",
