    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0"
  },
  "volta": {
    "node": "20.15.0"
  }
