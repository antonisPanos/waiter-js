{
  "name": "@strange-bytes/waiter",
  "version": "1.1.1",
  "description": "A simple module that enables you to perform and handle requests among your apps on the browser",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/antonisPanos/waiter-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonisPanos/waiter-js.git"
  },
  "bugs": {
    "url": "https://github.com/antonisPanos/waiter-js/issues"
  },
  "author": "Antonis Panos <panosantonios@gmail.com>",
  "license": "ISC",
  "keywords": [
    "microfrontends",
    "promise",
    "communication",
    "async",
    "inter-frontend",
    "frontend-communication"
  ],
  "scripts": {
    "build": "pnpm run clean && node scripts/build.mjs",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "module": "./dist/waiter.mjs",
    "import": "./dist/waiter.mjs",
    "require": "./dist/waiter.js",
    "default": "./dist/waiter.mjs"
  },
  "files": [
    "dist"
  ],
  "jsnext:main": "dist/waiter.mjs",
  "main": "dist/waiter.js",
  "module": "dist/waiter.mjs",
  "source": "src/index.ts",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "umd:main": "dist/waiter.umd.js",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
